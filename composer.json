{
    "name": "ydin/ydin",
    "require" : {
        "php": "^7.2|^7.4|^8.0"
    },
    "license": "MIT",
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "Ydin\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "test": [
            "phpunit --colors=always --testdox"
        ],
        "test-report": [
            "phpunit --coverage-html ./report"
        ]
    }

}
